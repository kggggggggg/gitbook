{
    "plugins":
    [
        "highlight",
        "search-plus",
        "accordion",
        "expandable-chapters",
        "chapter-fold",
        "-simple-page-toc",
        "page-toc-button"
    ],
    "pluginsConfig":
    {
        "hide-element":
        {
            "elements":
            [
                ".gitbook-link"
            ]
        },
        "simple-page-toc":
        {
            "maxDepth": 3,
            "skipFirstH1": true
        },
        "page-toc-button":
        {
            "maxDepth": 6,
            "minTocSize": 2
        }
    }
}